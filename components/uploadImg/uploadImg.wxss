/* , .up-pic image */
.add-image {
  width:217rpx;
  height:217rpx;
  color: #ddd;
  font-size: 144rpx;
  line-height: 217rpx;
  text-align: center;
  cursor: pointer;
  border-radius: 10rpx;
  border: 1px dashed #c4c4c4;
}

.picture_list {
  padding: 20rpx;
  padding-top: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
}

.picture_item {
  margin: 10px;
  margin-left: 0;
  margin-top: 0;
  position: relative;
  width: 217rpx;
  height: 217rpx;
}

.picture_item .del {
  position: absolute;
  top: -11rpx;
  right: -11rpx;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  background-color: #f00;
}

.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width:217rpx;
  height:217rpx;
  text-align: center;
  line-height: 217rpx;
  font-size: 12px;
}

.picture_item .up_img {
  width: 217rpx;
  height: 217rpx;
  border-radius: 8rpx;
}

.yes-upload {
  margin-top: 70rpx;
  color: #fff;
  background-color: #00a0e9;
  border-radius: 36rpx;
}
